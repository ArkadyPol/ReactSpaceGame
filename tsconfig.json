{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    ".yarn"
  ],
  "include": [
    "src"
  ]
}