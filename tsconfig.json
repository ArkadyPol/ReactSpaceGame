{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "jsx": "preserve"
  },
  "exclude": [
    "dist",
    "node_modules",
    ".yarn"
  ],
  "include": [
    "src"
  ]
}